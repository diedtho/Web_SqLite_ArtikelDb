@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Web_SqLite_ArtikelDb.Models
@model Artikel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddArticle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <form action="/home/AddArticle" method="post">
        <h1>Artikel hinzufügen</h1>
        <input type="text" asp-for="@Model.bezeichnung" required/>
        <label asp-for="@Model.bezeichnung">Bezeichnung</label>
        <br />
        <input type="text" asp-for="@Model.preis" required/>
        <label asp-for="@Model.preis">Preis [€]</label>
        <br />
        <input type="checkbox" asp-for="@Model.vorhanden" required/>
        <label asp-for="@Model.vorhanden">Bestand im Lager</label>
        <br />
        <button>Speichern</button>
        <button type="reset">Reset</button>
    </form>
    <a href="/home/index">Zurück</a>

</body>
</html>