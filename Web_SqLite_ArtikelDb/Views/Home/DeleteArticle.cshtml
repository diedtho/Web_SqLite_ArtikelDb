@using Web_SqLite_ArtikelDb.Models
@model Article

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeleteArticle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <h1>Zum Löschen ausgewählter Artikel</h1>
    <form method="post" action="/Home/DeleteArticle">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ArtId</th>
                    <th scope="col">Bezeichnung</th>
                    <th scope="col">Preis [€]</th>
                    <th scope="col">Bestand [Stk.]</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.artikelId</td>
                    <td>@Model.bezeichnung</td>
                    <td>@Model.preis</td>
                    <td>@Model.vorhanden</td>
                </tr>
            </tbody>
        </table>
        <button>Artikel löschen</button>
        <button type="reset">Reset</button>
    </form>
</body>
</html>
