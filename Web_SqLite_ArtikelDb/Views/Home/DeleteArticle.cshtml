@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Web_SqLite_ArtikelDb.Models.Artikel



@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DeleteArticle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <h1>Zum Löschen ausgewählter Artikel</h1>
    <form asp-action="DeleteArticle" method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ArtId</th>
                    <th scope="col">Bezeichnung</th>
                    <th scope="col">Preis [€]</th>
                    <th scope="col">Vorhanden</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" asp-for="@Model.artikelId" value="@Model.artikelId" readonly />
                    </td>
                    <td>
                        <input type="text" asp-for="@Model.bezeichnung" value="@Model.bezeichnung" readonly />
                    </td>
                    <td>
                        <input type="text" asp-for="@Model.preis" value="@Model.preis" readonly />
                    </td>
                    <td>
                        <input type="checkbox" asp-for="@Model.vorhanden" value="@Model.vorhanden" readonly />
                    </td>
                </tr>
            </tbody>
        </table>
        <button>Artikel löschen</button>
        <button type="reset">Reset</button>
    </form>
    <a href="/home/index">Zurück</a>
</body>
</html>