@using Web_SqLite_ArtikelDb.Models
@model List<Artikel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Outlined"
          rel="stylesheet">
</head>
<body>
    <h1>🕸 Alle Artikel unseres Shops 🕷🕸</h1>
    <h2><span class="material-icons">face</span></h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ArtId</th>
                <th scope="col">Bezeichnung</th>
                <th scope="col">Preis [€]</th>
                <th scope="col">Vorhanden</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Artikel art in @Model)
            {
            <tr>
                <td>@art.artikelId</td>
                <td>@art.bezeichnung</td>
                <td>@art.preis</td>
                <td>@art.vorhanden</td>
                <td><a href="/home/DeleteArticle?id=@art.artikelId"><span class="material-icons-outlined"/>delete</a></td>
                <td><a href="/home/EditArticle?id=@art.artikelId"><span class="material-icons-outlined">edit</span></a></td>
            </tr>

            }
        </tbody>
    </table>
    <p><a href="/home/AddArticle">Artikel hinzufügen</a></p>
</body>
</html>
