@using Web_SqLite_ArtikelDb.Models
@model List<Artikel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <form method="post" action="/home/Index">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">ArtId</th>
                    <th scope="col">Bezeichnung</th>
                    <th scope="col">Preis [€]</th>
                    <th scope="col">Bestand [Stk.]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Artikel art in @Model)
                {
                    <tr><td>@art.artikelId</td><td>@art.bezeichnung</td><td>@art.preis</td><td>@art.vorhanden</td></tr>
                }
            </tbody>
        </table>        
    </form>
    <p><a href="/home/AddArticle">Artikel hinzufügen</a></p>
</body>
</html>
